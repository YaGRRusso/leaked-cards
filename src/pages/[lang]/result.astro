---
import { ResultClient } from '@/client/result';
import Layout from '@/layouts/layout.astro';
import Root from '@/layouts/root.astro';
import { getTranslation } from '@/utils/i18n';

export function getStaticPaths() {
  return [{ params: { lang: 'en' } }, { params: { lang: 'pt' } }];
}

const { t } = getTranslation(Astro.currentLocale);
---

<Root
  title={t("pages.result.title")}
  description={t("pages.result.description")}
  keywords={t("pages.result.keywords")}
>
  <Layout>
    <ResultClient client:load/>
  </Layout>
</Root>
